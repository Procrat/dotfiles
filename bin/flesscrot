#!/bin/bash

set -euo pipefail

ssh_host="flesje"
url="http://r2t2.be"
user="$USER"

file="$(mktemp XXXXXX.png)"
escrotum "$@" "$file"
chmod 644 "$file"  # escrotum produces one with 600
scp -p "$file" "$ssh_host:~/images/"
rm "$file"
url="$url/~$user/$file"
notify-send -a flesscrot "Screenshot uploaded to $url"
echo "$url" | xclip -sel c
