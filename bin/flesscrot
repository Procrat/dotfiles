#!/bin/bash

set -euo pipefail

ssh_host="flesje"
url="http://flashyoshi.me:8080"
user="$USER"

file="$(mktemp XXXXXX.png)"
scrot $* "$file"
scp -p "$file" "$ssh_host:~/images/"
rm "$file"
url="$url/~$user/images/$file"
notify-send -a flesscrot "Screenshot uploaded to $url"
echo "$url" | xclip -sel c
