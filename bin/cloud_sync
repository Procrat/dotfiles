#!/usr/bin/env bash
#
# Syncs Google Drives to download dir.
#
# Assumes rclone remotes with these names are set up.
# Assumes XDG_DOWNLOAD_DIR is set somewhere.

set -euo pipefail

if [[ -z "${XDG_DOWNLOAD_DIR:-}" ]]; then
    source ${XDG_CONFIG_DIR:-$HOME/.config}/user-dirs.dirs
fi

rclone sync 'gdrive:' "$XDG_DOWNLOAD_DIR/gdrive"
rclone sync '12ul:12UL 2016' "$XDG_DOWNLOAD_DIR/12UL 2016"
