#!/usr/bin/env bash
#
# USAGE: Go into a certain music directory and execute this.
# Creates a playlist in the parent directory of all music (recursively) in
# the current folder

set -euo pipefail

pwd=$(pwd)
find . -type f \( -name '*.mp3' -o -name '*.ogg' \) \
    | sed "s:^\.:${pwd}:" \
    > "${pwd}.m3u"
