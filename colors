#!/bin/bash
#
# Defines color scheme variables
# Use in other scripts as 'source ~/.colors'

# Solarized theme
YELLOW='#B58900'
ORANGE='#CB4B16'
RED='#DC322F'
MAGENTA='#D33682'
VIOLET='#6C71C4'
BLUE='#268BD2'
CYAN='#2AA198'
GREEN='#859900'
S_BASE03='#002B36'
S_BASE02='#073642'
S_BASE01='#586E75'
S_BASE00='#657B83'
S_BASE0='#839496'
S_BASE1='#93A1A1'
S_BASE2='#EEE8D5'
S_BASE3='#FDF6E3'

PRIMARY_CONTENT_COLOR=$S_BASE0
BACKGROUND_COLOR=$S_BASE03
SECONDARY_CONTENT_COLOR=$S_BASE01
EMPHASIZED_CONTENT_COLOR=$YELLOW
INVERSE_CONTENT_COLOR=$S_BASE02
INVERSE_BACKGROUND_COLOR=$S_BASE1
BACKGROUND_HIGHLIGHT_COLOR=$S_BASE02
WARNING_COLOR=$YELLOW
URGENT_WARNING_COLOR=$RED
