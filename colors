#!/bin/bash
#
# Defines color scheme variables
# Use in other scripts as 'source ~/.colors'


# Base16 theme
export B_BASE00='#3B3228'
export B_BASE01='#534636'
export B_BASE02='#645240'
export B_BASE03='#7E705A'
export B_BASE04='#B8AFAD'
export B_BASE05='#D0C8C6'
export B_BASE06='#E9E1DD'
export B_BASE07='#F5EEEB'
export B_BASE08='#CB6077'
export B_BASE09='#D28B71'
export B_BASE0A='#F4BC87'
export B_BASE0B='#BEB55B'
export B_BASE0C='#7BBDA4'
export B_BASE0D='#8AB3B5'
export B_BASE0E='#A89BB9'
export B_BASE0F='#BB9584'

export PRIMARY_CONTENT_COLOR=$B_BASE05
export BACKGROUND_COLOR=$B_BASE00
export SECONDARY_CONTENT_COLOR=$B_BASE04
export SLIGHTLY_EMPHASIZED_CONTENT_COLOR=$B_BASE07
export EMPHASIZED_CONTENT_COLOR=$B_BASE0A
export INVERSE_CONTENT_COLOR=$B_BASE02
export INVERSE_BACKGROUND_COLOR=$B_BASE04
export BACKGROUND_HIGHLIGHT_COLOR=$B_BASE01
export ACCENT_COLOR=$B_BASE0D
export OK_COLOR=$B_BASE0B
export WARNING_COLOR=$B_BASE0A
export URGENT_WARNING_COLOR=$B_BASE08
export ERROR_COLOR=$URGENT_WARNING_COLOR
