# This file should be bash and zsh compatible


# Base16 Shell
export BASE16_THEME='base16-mocha'
BASE16_SHELL="$HOME/.config/base16-shell/scripts/${BASE16_THEME}.sh"
[[ -s "$BASE16_SHELL" ]] && source "$BASE16_SHELL"

# Aliases
source $HOME/.aliases

# In less, parse colors, show longer prompt
export LESS='-R -M -W -i'
export PAGER='less'

# Editor settings
has_nvim="$(which nvim 2>/dev/null)"
if [[ -n "$has_nvim" ]]; then
    export EDITOR=nvim
    export VISUAL=nvim
fi

# Disable Ctrl+S for scrolling so we can use it for the save shortcut in vim,
# but only for interactive shells of course
[[ $- == *i* ]] && stty -ixon

# Pointer to Java JDK
export JAVA_HOME="/usr/lib/jvm/java-8-openjdk"
# Add ruby gem path to PATH and make Bundler install gems per user
export GEM_HOME="$HOME/.gem/ruby/2.4.0"

export PATH="$HOME/.local/bin:$HOME/.cabal/bin:$JAVA_HOME/bin:$GEM_HOME/bin:$HOME/bin:$PATH."

# Set user virtualenv if unset and add to path if it exists
if [[ -z "$VIRTUAL_ENV" && -d "$HOME/.venv" ]]; then
    export VIRTUAL_ENV="$HOME/.venv"
    export PATH="$VIRTUAL_ENV/bin:$PATH"
fi


# vim:filetype=sh
