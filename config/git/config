[user]
    name = Stijn Seghers
    email = stijnseghers@gmail.com

[push]
    default = current

[pull]
    rebase = true

[fetch]
    prune = true
    pruneTags = true

[merge]
    tool = vimdiff

    # Include summaries of merged commits in newly created merge commit messages
    log = true
    # Show base version in merge conflicts
    conflictStyle = diff3

[mergetool]
    keepBackup = false

[mergetool "vimdiff"]
    cmd = nvim -d $MERGED $LOCAL $BASE $REMOTE -c 'wincmd J'

[rebase]
    stat = true
    autoStash = true
    autoSquash = true
    missingCommitsCheck = "error"

[diff]
    algorithm = histogram
    colorMoved = true
    mnemonicPrefix = true
    tool = vimdiff

[commit]
    gpgsign = true

[interactive]
    singleKey = true

[rerere]
    enabled = true

[alias]
    a = add -A
    au = add -u
    ap = add -p
    s = status -sb
    st = status -sb
    ci = commit
    ca = commit --amend -C HEAD
    fix = commit --fixup
    wip = commit -am "WIP"
    br = branch
    co = checkout
    cob = checkout -b
    cop = checkout -p --
    df = diff -b -w -B
    dff = diff -b -w -B -W
    dfw = diff -b -w -B --color-words
    dffw = diff -b -w -B -W --color-words
    dfc = diff --cached -b -w -B
    dffc = diff --cached -b -w -B -W
    vdf = difftool
    vdfc = difftool --cached
    lg = log --stat
    lgp = log --stat -p -b -w -B --color-words
    lol = log --graph --pretty=oneline --abbrev-commit
    lola = log --graph --pretty=oneline --abbrev-commit --all
    lolaf = log --graph --pretty=format:'%C(auto)%h%d %C(brightblack)%cr %C(magenta)%an %C(auto)%s' --all
    unstage = reset HEAD --
    us = reset HEAD --
    usp = reset -p HEAD --
    stash-unapply = !git stash show -p | git apply -R
    pop = stash pop
    sshow = stash show -p
    undo = reset --soft HEAD^
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    contributors = shortlog --summary --numbered
    mergeff = merge --ff-only
    rb = rebase
    rebasi = rebase -i
    rbi = rebase -i
    rba = rebase --abort
    rbc = rebase --continue
    rbp = rebase --show-current-patch
    pushf = push --force-with-lease

[color]
    ui = true

[help]
    autocorrect = 1

[github]
    user = Procrat
