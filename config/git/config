[user]
    name = Stijn Seghers
    email = stijnseghers@gmail.com

[core]
    pager = diff-so-fancy | less --tabs=4 -RFX

[push]
    default = current

[pull]
    rebase = true

[fetch]
    prune = true
    pruneTags = true

[merge]
    tool = vimdiff

    # Include summaries of merged commits in newly created merge commit messages
    log = true
    # Show base version in merge conflicts
    conflictStyle = zdiff3

[mergetool]
    keepBackup = false

[mergetool "vimdiff"]
    cmd = nvim -d $MERGED $LOCAL $BASE $REMOTE -c 'wincmd J'

[rebase]
    stat = true
    autoStash = true
    autoSquash = true
    missingCommitsCheck = "error"

[diff]
    algorithm = histogram
    colorMoved = true
    mnemonicPrefix = true
    tool = vimdiff

[commit]
    gpgsign = true

[interactive]
    singleKey = true

[rerere]
    enabled = true

[alias]
    a = add -A
    ap = add -p
    au = add -u
    br = branch
    ca = commit --amend -C HEAD
    ci = commit
    cob = checkout -b
    co = checkout
    cop = checkout -p --
    dfc = diff --cached -b -w -B
    df = diff -b -w -B
    dffc = diff --cached -b -w -B -W
    dff = diff -b -w -B -W
    dffw = diff -b -w -B -W --color-words
    dfw = diff -b -w -B --color-words
    fix = commit --fixup
    lg = log --stat
    lgp = log --stat -p -b -w -B --color-words
    lolaf = log --graph --pretty=format:'%C(auto)%h%d %C(brightblack)%ah %C(magenta)%an %C(auto)%s' --all
    lola = log --graph --pretty=oneline --abbrev-commit --all
    lol = log --graph --pretty=oneline --abbrev-commit
    mergeff = merge --ff-only
    pop = stash pop
    pushf = push --force-with-lease
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase -i
    rbp = rebase --show-current-patch
    rb = rebase
    sshow = stash show -p
    s = status -sb
    st = status -sb
    undo = reset --soft HEAD^
    unstage = reset HEAD --
    usp = reset -p HEAD --
    us = reset HEAD --
    vdfc = difftool --cached
    vdf = difftool
    wip = commit -am "WIP"
    # Infrequently used but hard to remember aliases
    blamebetter = blame -MCCC
    contributors = shortlog --summary --numbered
    ignore = update-index --assume-unchanged
    stash-rename = "!_() { rev=$(git rev-parse \"$1\") && git stash drop \"$1\" || exit 1; git stash store -m \"$2\" \"$rev\" }; _"
    stash-unapply = !git stash show -p | git apply -R
    unignore = update-index --no-assume-unchanged

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[color]
    ui = true

[help]
    autocorrect = 1

[github]
    user = Procrat
