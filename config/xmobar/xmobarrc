    , Run Wireless "wlp58s0"
                   ["-t", "<qualityipat>"
                   , "--"
                   , "--quality-icon-pattern", "<icon=wireless8-%%.xbm/>"
                   ] 80
    , Run Battery ["-t", "<leftipat> <left>"
