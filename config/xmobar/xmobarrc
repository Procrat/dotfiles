                  , "-n", "#F4BC87"
                  , "-l", "#CB6077"
                  , "--"
                  , "--on-icon-pattern", "<fc=#BEB55B><icon=battery%%.xbm/></fc>"
                  , "--idle-icon-pattern", "<icon=ac_02.xbm/>"
                  , "--off-icon-pattern", "<icon=battery%%.xbm/>"
                  ] 80
    , Run Date "%a %_d %b  <fc=#F5EEEB>%H:%M</fc>:%S" "date" 10
    ]

  -- appearance
