Config {
  template = "   <fc=#8AB3B5><icon=arch_10x10.xbm/></fc>\
              \<fc=#534636> <fn=1>│</fn> </fc>\
              \%UnsafeStdinReader%\
              \}{ \
              \%alsa:default:Master%\
              \<fc=#534636> <fn=1>│</fn> </fc>\
              \%disku%\
              \<fc=#534636> <fn=1>│</fn> </fc>\
